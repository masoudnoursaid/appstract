@using Size = MudBlazor.Size
@using Color = MudBlazor.Color

<MudDialog Class="rounded-12">
    <DialogContent>
        <MudPaper Elevation="0" class="py-6">
            <div class="d-flex justify-center mb-4">
                <MudAvatar Class="d-flex justify-center align-center"
                           Color="Color.Default"
                           Size="Size.Large">
                    <MudIcon Size="Size.Medium"
                             Icon="@IconDialog"
                             Color="IconColor"/>
                </MudAvatar>
            </div>

            <div class="d-flex justify-center mb-4">
                <MudText Color="@TitleColor">
                    @Title
                </MudText>
            </div>

            <MudText Class="typo__reg400--13 color-neutral--900">
                @Message
            </MudText>

            <div class="mt-8 d-flex justify-center gap-2">
                @if (ShowCancel)
                {
                    <MudButton Class="ultratone-btn alert-dialog__cancel--btn rounded-lg"
                               Color="Color.Transparent"
                               DisableElevation="true"
                               OnClick="OnCancelClick"
                               FullWidth="true">
                        @DialogResource.CloseButton
                    </MudButton>
                }
                <MudButton OnClick="OnOkClick"
                           Class="ultratone-btn alert-dialog__submit--btn rounded-lg"
                           Color="@IconColor"
                           DisableElevation="true"
                           Variant="Variant.Filled"
                           FullWidth="true">
                    <MudText>
                        @OkText
                    </MudText>
                </MudButton>
            </div>
        </MudPaper>
    </DialogContent>
</MudDialog>
